{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
    <h3>Project List:</h3>
    <div>
        {% if collection %}
        <ul>
            {% for project in collection %}
                <li>{{ project.title }} <a href="">✏️</a> <a href="">🗑️</a> </li>
            {% endfor %}
        </ul>
        <a href="{{ path('project_list') }}?page={{ query.page - 1 }}">«</a> | <a href="{{ path('project_list') }}?page={{ query.page + 1 }}">»</a>
        {% else %}
            <em>No Projects exist</em>
        {% endif %}
    </div>
    <div>
        <a href="">➕ Add</a>
    </div>
{% endblock %}
